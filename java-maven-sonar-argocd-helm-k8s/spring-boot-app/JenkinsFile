pipeline {
  agent {
    docker {
      // Use one of these official Maven images with JDK 17
      image 'maven:3.8.6-openjdk-17' // OR
      // image 'maven:3.8.7-jdk-17' // OR
      // image 'maven:3.9.6-eclipse-temurin-17'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }
  
  stages {
    stage('Verify Environment') {
      steps {
        sh 'java -version'
        sh 'mvn -v'
      }
    }
    
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/kaustav2608/Jenkins-Zero-To-Hero.git'
      }
    }
    
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // Add -DskipTests if you want to skip tests temporarily
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
    
    // Rest of your stages remain the same...
  }
}
